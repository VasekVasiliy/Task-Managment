<!-- app/views/tasks/show.html.erb -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= @task.name %></title>
</head>
<body>
<h1><%= @task.name %></h1>
<p><strong>Description:</strong> <%= @task.description %></p>
<p><strong>Status:</strong> <%= @task.status  %></p>
<p><strong>Deadline:</strong> <%= @task.deadline %></p>

<%= form_with(model: @task, url: update_status_task_path(@task), method: :post) do |form| %>
  <label for="task_status">Update Status:</label>
  <%= form.select :status, Task.statuses.keys %>
  <%= form.submit "Update Status" %>
<% end %>

<%= link_to 'Back', project_path(@task.project) %>
</body>
</html>
